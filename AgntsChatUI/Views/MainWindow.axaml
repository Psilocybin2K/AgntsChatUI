<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgntsChatUI.ViewModels"
        xmlns:views="using:AgntsChatUI.Views"
        xmlns:components="using:AgntsChatUI.Views.Components"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="AgntsChatUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Agent Chat Assistant"
        MinWidth="1200" MinHeight="600">

	<!-- Design.DataContext removed due to constructor dependencies -->

	<Grid IsEnabled="True" x:Name="MainGrid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="380"/> <!-- Data Source Management -->
			<ColumnDefinition Width="*"/>   <!-- Chat Area -->
		</Grid.ColumnDefinitions>

		<!-- Data Source Management -->
		<views:DataSourceManagementView Grid.Column="0" DataContext="{Binding DataSourceManagementViewModel}"/>

		<!-- Main Chat Area -->
		<Grid Grid.Column="1" IsEnabled="True">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Compact Agent Selector Component -->
			<components:CompactAgentSelector Grid.Row="0" DataContext="{Binding ChatViewModel}" IsEnabled="True"/>

			<!-- Chat Messages Component -->
			<components:ChatMessagesComponent Grid.Row="1" DataContext="{Binding ChatViewModel}"/>

			<!-- Chat Input Component -->
			<components:ChatInputComponent Grid.Row="2" DataContext="{Binding ChatViewModel}"/>
		</Grid>

		<!-- Agent Edit Dialog Overlay -->
		<components:AgentEditDialogComponent Grid.ColumnSpan="2" DataContext="{Binding AgentManagementViewModel}"/>

		<!-- Kernel Configuration Dialog Overlay -->
		<components:KernelConfigurationDialogComponent Grid.ColumnSpan="2" DataContext="{Binding ChatViewModel}"/>

		<!-- Agent Management Slide-out Panel Overlay -->
		<components:AgentManagementPanel Grid.ColumnSpan="2"/>

		<!-- Command Palette Overlay (centered at top of window, overlays all columns) -->
		<components:CommandPaletteComponent x:Name="CommandPalette" IsVisible="{Binding IsCommandPaletteVisible}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Width="400" Grid.ColumnSpan="2"/>
	</Grid>
</Window>