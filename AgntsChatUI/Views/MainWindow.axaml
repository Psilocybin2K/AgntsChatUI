<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgntsChatUI.ViewModels"
        xmlns:views="using:AgntsChatUI.Views"
        xmlns:components="using:AgntsChatUI.Views.Components"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="AgntsChatUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Document Chat Assistant"
        MinWidth="800" MinHeight="600">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<Grid IsEnabled="True">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="400"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Document Management Component -->
		<views:DocumentManagementView Grid.Column="0" DataContext="{Binding DocumentManagementViewModel}"/>

		<!-- Main Chat Area -->
		<Grid Grid.Column="1" IsEnabled="True">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Chat Header Component -->
			<components:ChatHeaderComponent Grid.Row="0" DataContext="{Binding ChatViewModel}" IsEnabled="True"/>

			<!-- Chat Messages Component -->
			<components:ChatMessagesComponent Grid.Row="1" DataContext="{Binding ChatViewModel}"/>

			<!-- Chat Input Component -->
			<components:ChatInputComponent Grid.Row="2" DataContext="{Binding ChatViewModel}"/>
		</Grid>

		<!-- Kernel Configuration Dialog Overlay -->
		<components:KernelConfigurationDialogComponent Grid.ColumnSpan="2" DataContext="{Binding ChatViewModel}"/>
	</Grid>
</Window>