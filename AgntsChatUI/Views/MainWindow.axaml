<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgntsChatUI.ViewModels"
        xmlns:views="using:AgntsChatUI.Views"
        xmlns:components="using:AgntsChatUI.Views.Components"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="AgntsChatUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Agent Chat Assistant"
        MinWidth="1200" MinHeight="600">

	<!-- Design.DataContext removed due to constructor dependencies -->

	<Grid IsEnabled="True">
		<Grid.ColumnDefinitions>
			<!-- Agent Management Panel - Reduced width since no inline editing -->
			<ColumnDefinition Width="350"/>
			<!-- Document Management Panel - Increased width for better document viewing -->
			<ColumnDefinition Width="380"/>
			<!-- Chat Area - Takes remaining space -->
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Agent Management Component -->
		<views:AgentManagementView Grid.Column="0" DataContext="{Binding AgentManagementViewModel}"/>

		<!-- Document Management Component -->
		<views:DocumentManagementView Grid.Column="1" DataContext="{Binding DocumentManagementViewModel}"/>

		<!-- Main Chat Area -->
		<Grid Grid.Column="2" IsEnabled="True">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Chat Header Component -->
			<components:ChatHeaderComponent Grid.Row="0" DataContext="{Binding ChatViewModel}" IsEnabled="True"/>

			<!-- Chat Messages Component -->
			<components:ChatMessagesComponent Grid.Row="1" DataContext="{Binding ChatViewModel}"/>

			<!-- Chat Input Component -->
			<components:ChatInputComponent Grid.Row="2" DataContext="{Binding ChatViewModel}"/>
		</Grid>

		<!-- Kernel Configuration Dialog Overlay -->
		<components:KernelConfigurationDialogComponent Grid.ColumnSpan="3" DataContext="{Binding ChatViewModel}"/>
	</Grid>
</Window>