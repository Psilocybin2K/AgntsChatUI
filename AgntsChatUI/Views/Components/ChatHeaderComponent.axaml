<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AgntsChatUI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="120"
             x:Class="AgntsChatUI.Views.Components.ChatHeaderComponent"
             x:DataType="vm:ChatViewModel">

	<Design.DataContext>
		<vm:ChatViewModel/>
	</Design.DataContext>

	<Border Padding="16,12" Background="White" BorderBrush="#e8eaed" BorderThickness="0,0,0,1">
		<StackPanel Spacing="8">
			
			<!-- Title and Status - Compact -->
			<StackPanel Orientation="Horizontal" Spacing="8">
				<Border Width="32" Height="32" CornerRadius="16" Background="#4285f4">
					<TextBlock Text="ðŸ¤–" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Border>
				<StackPanel>
					<TextBlock Text="Document Assistant" FontSize="16" FontWeight="Medium" Foreground="#202124"/>
					<TextBlock Text="{Binding StatusText}" FontSize="12" Foreground="{Binding StatusColor}"/>
				</StackPanel>
			</StackPanel>

			<!-- Agent Selection Section - Compact -->
			<StackPanel Spacing="4">
				<!-- Section Header -->
				<StackPanel Orientation="Horizontal" Spacing="6">
					<TextBlock Text="Select Agents:" FontSize="12" FontWeight="Medium" Foreground="#202124"/>
					<Border Background="#e8f0fe" CornerRadius="8" Padding="4,1">
						<TextBlock Text="{Binding SelectedAgents.Count}" FontSize="10" FontWeight="Medium" Foreground="#1a73e8"/>
					</Border>
				</StackPanel>

				<!-- Agent ListBox with Checkboxes - Compact -->
				<Border Background="#f8f9fa" CornerRadius="6" Padding="8" Height="120">
					<ListBox ItemsSource="{Binding AvailableAgents}" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
						<ListBox.ItemTemplate>
							<DataTemplate>
								<Grid Margin="0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									
									<!-- Agent Name - Compact -->
									<StackPanel Grid.Column="0" Margin="4,1">
										<TextBlock Text="{Binding Name}" 
                                                   FontSize="11" 
                                                   FontWeight="Medium" 
                                                   Foreground="#202124"/>
										<TextBlock Text="{Binding Description}" 
                                                   FontSize="9" 
                                                   Foreground="#5f6368" 
                                                   TextWrapping="Wrap"
                                                   MaxLines="1"
                                                   TextTrimming="CharacterEllipsis"/>
									</StackPanel>
									
									<!-- Checkbox -->
									<CheckBox Grid.Column="1" 
                                              VerticalAlignment="Center"
                                              Margin="4,0"
                                              IsChecked="{Binding IsSelected}"
                                              Checked="OnAgentCheckBoxChecked"
                                              Unchecked="OnAgentCheckBoxUnchecked"/>
								</Grid>
							</DataTemplate>
						</ListBox.ItemTemplate>
					</ListBox>
				</Border>

				<!-- Selected Agents Display - Compact -->
				<StackPanel Orientation="Horizontal" Spacing="3" Margin="0,2,0,0">
					<TextBlock Text="Selected:" FontSize="10" Foreground="#5f6368" VerticalAlignment="Center"/>
					<ItemsControl ItemsSource="{Binding SelectedAgents}">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel/>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<Border Background="#e8f0fe" CornerRadius="8" Padding="4,1" Margin="1,0">
									<StackPanel Orientation="Horizontal" Spacing="3">
										<TextBlock Text="{Binding Name}" FontSize="9" Foreground="#1a73e8"/>
										<Button Content="Ã—" 
                                                FontSize="8" 
                                                FontWeight="Bold"
                                                Background="Transparent"
                                                Foreground="#1a73e8"
                                                BorderThickness="0"
                                                Padding="1,0"
                                                Click="OnRemoveAgentClicked"/>
									</StackPanel>
								</Border>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</StackPanel>
			</StackPanel>

			<!-- Configuration Button - Compact -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Classes="LargeIconButton"
                        ToolTip.Tip="Kernel Configuration"
                        Command="{Binding OpenKernelConfigurationCommand}">
					<Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.22,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.22,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                          Fill="#5f6368" Stretch="Uniform" Margin="2"/>
				</Button>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>