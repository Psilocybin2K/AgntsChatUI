<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AgntsChatUI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
             x:Class="AgntsChatUI.Views.Components.CompactAgentSelector"
             x:DataType="vm:ChatViewModel">

	<Design.DataContext>
		<vm:ChatViewModel/>
	</Design.DataContext>

	<Border Height="60" 
	        Padding="16,12" 
	        Background="White" 
	        BorderBrush="#e8eaed" 
	        BorderThickness="0,0,0,1">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			
			<!-- Agent Selector Dropdown -->
			<StackPanel Grid.Column="0" 
			            Orientation="Horizontal" 
			            Spacing="12" 
			            VerticalAlignment="Center">
				
				<!-- Agent Dropdown -->
				<ComboBox Name="AgentDropdown"
				          ItemsSource="{Binding AvailableAgents}"
				          Width="120"
				          MaxHeight="200"
				          HorizontalAlignment="Left"
				          VerticalAlignment="Center"
				          SelectionChanged="OnAgentSelectionChanged">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<Border Padding="8,6" 
							        Background="Transparent"
							        CornerRadius="4">
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									
									<!-- Agent Icon -->
									<Border Grid.Column="0" 
									        Width="24" 
									        Height="24" 
									        CornerRadius="12" 
									        Background="#4285f4" 
									        Margin="0,0,8,0">
										<TextBlock Text="ðŸ¤–" 
										           Classes="Caption" 
										           HorizontalAlignment="Center" 
										           VerticalAlignment="Center"/>
									</Border>
									
									<!-- Agent Info -->
									<StackPanel Grid.Column="1" 
									            Spacing="2" 
									            VerticalAlignment="Center">
										<TextBlock Text="{Binding Name}" 
										           Classes="BodyMedium" 
										           FontWeight="Medium" 
										           Foreground="#202124"/>
										<TextBlock Text="{Binding Description}" 
										           Classes="Caption" 
										           Foreground="#5f6368" 
										           TextWrapping="Wrap" 
										           MaxLines="1" 
										           TextTrimming="CharacterEllipsis"/>
									</StackPanel>
									
									<!-- Selection Indicator -->
									<Border Grid.Column="2" 
									        Width="16" 
									        Height="16" 
									        CornerRadius="8" 
									        Background="#4285f4" 
									        IsVisible="{Binding IsSelected}">
										<TextBlock Text="âœ“" 
										           Classes="Caption" 
										           Foreground="White" 
										           HorizontalAlignment="Center" 
										           VerticalAlignment="Center"/>
									</Border>
								</Grid>
							</Border>
						</DataTemplate>
					</ComboBox.ItemTemplate>
					<ComboBox.PlaceholderText>
						ðŸ¤– Select Agent
					</ComboBox.PlaceholderText>
				</ComboBox>
				
				<!-- Multi-Select Toggle -->
				<Button Name="MultiSelectToggle"
				        Classes="SecondaryButton"
				        Width="28" 
				        Height="28"
				        ToolTip.Tip="Toggle multi-agent selection"
				        Click="OnMultiSelectToggleClicked">
					<TextBlock Text="Multi" 
					           Classes="Caption" 
					           FontWeight="Bold"
					           Foreground="#5f6368"
					           HorizontalAlignment="Center" 
					           VerticalAlignment="Center"/>
				</Button>
			</StackPanel>
			
			<!-- Selected Agents Pills -->
			<ScrollViewer Grid.Column="1" 
			              HorizontalScrollBarVisibility="Auto"
			              VerticalScrollBarVisibility="Disabled"
			              Margin="12,0">
				<ItemsControl ItemsSource="{Binding SelectedAgents}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Background="#4285f4" 
							        CornerRadius="16" 
							        Padding="8,4" 
							        Margin="4,0"
							        Classes="InteractiveCard">
								<Grid HorizontalAlignment="Center">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="Auto"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									<TextBlock Grid.Column="0" 
									           Classes="Caption" 
									           Text="{Binding Name}" 
									           Foreground="White" 
									           VerticalAlignment="Center"/>
									<Button Grid.Column="1" 
									        Classes="IconButton" 
									        Click="OnRemoveAgentClicked"
									        ToolTip.Tip="Remove agent"
									        Margin="4,0,0,0"
									        Width="16" 
									        Height="16"
									        VerticalAlignment="Center">
										<TextBlock Text="Ã—" 
										           Classes="Caption" 
										           FontWeight="Bold" 
										           Foreground="White"/>
									</Button>
								</Grid>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
			
			<!-- Quick Actions -->
			<StackPanel Grid.Column="2" 
			            Orientation="Horizontal" 
			            Spacing="8" 
			            VerticalAlignment="Center">
				
				<!-- Status Indicator -->
				<Border Width="8" 
				        Height="8" 
				        CornerRadius="4" 
				        Background="{Binding StatusColor}" 
				        ToolTip.Tip="{Binding StatusText}"/>
				
				<!-- Agent Management Panel Toggle -->
				<Button Name="AgentPanelToggle"
				        Classes="SecondaryButton"
				        Padding="6,4"
				        ToolTip.Tip="Open agent management panel"
				        Command="{Binding ToggleAgentPanelCommand}">
					<TextBlock Text="Agents" 
					           Classes="Caption" 
					           Foreground="#5f6368"
					           HorizontalAlignment="Center" 
					           VerticalAlignment="Center"/>
				</Button>
				
				<!-- Kernel Configuration -->
				<Button Name="KernelConfigButton"
				        Classes="SecondaryButton"
				        Padding="6,4"
				        ToolTip.Tip="Configure kernel settings"
				        Command="{Binding OpenKernelConfigurationCommand}">
					<TextBlock Text="Config" 
					           Classes="Caption" 
					           Foreground="#5f6368"
					           HorizontalAlignment="Center" 
					           VerticalAlignment="Center"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
