<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:AgntsChatUI.ViewModels"
             xmlns:models="using:AgntsChatUI.Models"
             x:Class="AgntsChatUI.Views.DataSourceManagementView"
             x:DataType="vm:DataSourceManagementViewModel">

    <Border Background="#f8f9fa" BorderBrush="#e8eaed" BorderThickness="0,0,1,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Collapse/Expand -->
            <Border Grid.Row="0" Padding="0" BorderBrush="#e8eaed" BorderThickness="0,0,0,1">
                <Grid>
                    <!-- Expanded Layout -->
                    <Grid IsVisible="{Binding IsExpanded}" Margin="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Collapse Button -->
                        <Button Grid.Column="0" 
                                Classes="IconButton" 
                                Command="{Binding ToggleExpandedCommand}"
                                Width="40" Height="40"
                                Margin="0,0,12,0"
                                ToolTip.Tip="Click to collapse panel">
                            <Grid>
                                <TextBlock Text="â–¼" Classes="Caption" Foreground="#5f6368" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                        <!-- Title Section -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <Border Width="40" Height="40" CornerRadius="20" Background="#4285f4">
                                <TextBlock Text="ðŸ“Š" Classes="TitleMedium" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="Data Source Management" Classes="HeadlineSmall" FontWeight="Medium" Foreground="#202124"/>
                                <TextBlock Text="Configure and manage data sources for AI context" Classes="BodySmall" Foreground="#5f6368"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Collapsed Layout -->
                    <StackPanel IsVisible="{Binding !IsExpanded}" 
                               Orientation="Vertical" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Spacing="8"
                               Margin="0,12">
                        <!-- Expand Button -->
                        <Button Classes="IconButton" 
                                Command="{Binding ToggleExpandedCommand}"
                                Width="32" Height="32"
                                ToolTip.Tip="Click to expand panel"
                                HorizontalAlignment="Center">
                            <TextBlock Text="â–¶" Classes="Caption" Foreground="#5f6368" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        
                        <!-- Icon and Label -->
                        <TextBlock Text="ðŸ“Š" Classes="BodyMedium" HorizontalAlignment="Center"/>
                        <TextBlock Text="Data" Classes="Caption" FontWeight="Medium" Foreground="#202124" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Status and Error Messages (only visible when expanded) -->
            <StackPanel Grid.Row="1" Margin="20,16,20,0" IsVisible="{Binding IsExpanded}">
                <!-- Loading Indicator -->
                <Border IsVisible="{Binding IsLoading}" Classes="StandardCard" 
                        Background="{DynamicResource PrimaryBlue}"
                        BorderBrush="{DynamicResource PrimaryBlue}" Padding="16" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="â³" VerticalAlignment="Top"/>
                        <TextBlock Classes="BodyMedium" Text="{Binding StatusMessage}" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </StackPanel>
                </Border>
                
                <!-- Operation Status -->
                <Border IsVisible="{Binding IsOperationInProgress}" Classes="StandardCard" 
                        Background="{DynamicResource WarningAmber}"
                        BorderBrush="{DynamicResource WarningAmber}" Padding="16" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ”„" VerticalAlignment="Top"/>
                        <TextBlock Classes="BodyMedium" Text="{Binding OperationStatus}" 
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </StackPanel>
                </Border>
                
                <!-- Error Message -->
                <Border IsVisible="{Binding HasError}" Classes="StandardCard" 
                        Background="{DynamicResource ErrorRed}"
                        BorderBrush="{DynamicResource ErrorRed}" Padding="16" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0" Spacing="8">
                            <TextBlock Text="âŒ" VerticalAlignment="Top"/>
                            <TextBlock Classes="BodyMedium" Text="{Binding ErrorMessage}" 
                                       TextWrapping="Wrap" MaxWidth="280"/>
                        </StackPanel>
                        <Button Grid.Column="1" Classes="IconButton" Command="{Binding ClearErrorCommand}"
                                ToolTip.Tip="Clear error" Margin="8,0,0,0">
                            <TextBlock Text="âœ•" Classes="Caption"/>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Success Message -->
                <Border IsVisible="{Binding StatusMessage}" Classes="StandardCard" 
                        Background="{DynamicResource SuccessGreen}"
                        BorderBrush="{DynamicResource SuccessGreen}" Padding="16" Margin="0,0,0,8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="âœ…" VerticalAlignment="Top" Foreground="{DynamicResource SuccessGreen}"/>
                        <TextBlock Classes="BodyMedium" Text="{Binding StatusMessage}" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   TextWrapping="Wrap" MaxWidth="300"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Data Sources List (only visible when expanded) -->
            <ScrollViewer Grid.Row="2" IsVisible="{Binding IsExpanded}" Margin="20,8,20,20">
                <StackPanel>
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,16" HorizontalAlignment="Left">
                        <Button Command="{Binding AddDataSourceCommand}" 
                                Classes="PrimaryButton"
                                ToolTip.Tip="Import a specific file as a new data source">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ“„" Classes="BodyMedium"/>
                                <TextBlock Classes="TitleSmall" Text="Add Data Source"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding RefreshDataSourcesCommand}" 
                                Classes="SecondaryButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ”„" Classes="BodySmall"/>
                                <TextBlock Classes="TitleSmall" Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Data Source Count -->
                    <TextBlock Classes="Caption" Text="{Binding DataSources.Count}" 
                               Margin="0,0,0,12" 
                               HorizontalAlignment="Right"/>
                    
                    <!-- Data Sources -->
                    <ItemsControl ItemsSource="{Binding DataSources}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="models:DataSourceDefinition">
                                <Border Classes="InteractiveCard" Margin="0,0,0,16" Padding="24">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Header Row with Toggle and Actions -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Checkbox -->
                                            <CheckBox Grid.Column="0" 
                                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                                      Command="{Binding $parent[UserControl].DataContext.ToggleDataSourceCommand}" 
                                                      CommandParameter="{Binding}" 
                                                      Margin="0,0,16,0"
                                                      VerticalAlignment="Center"/>
                                            
                                            <!-- Title and Type -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                                <TextBlock Classes="TitleMedium" Text="{Binding Name}" 
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Classes="BodySmall" Text="{Binding Type}"/>
                                            </StackPanel>
                                            
                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" 
                                                        VerticalAlignment="Center">
                                                <Button Classes="SecondaryButton" 
                                                        Command="{Binding $parent[UserControl].DataContext.DeleteDataSourceCommand}"
                                                        CommandParameter="{Binding}">
                                                    <TextBlock Classes="TitleSmall" Text="Delete"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <!-- Description Row -->
                                        <TextBlock Grid.Row="1" Classes="BodyMedium" Text="{Binding Description}" 
                                                   Margin="0,16,0,0"
                                                   TextWrapping="Wrap"/>
                                        
                                        <!-- Metadata Row -->
                                        <TextBlock Grid.Row="2" Classes="Caption"
                                                   Text="{Binding DateModified, StringFormat='Last modified: {0:yyyy-MM-dd HH:mm}'}" 
                                                   Margin="0,12,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl> 