<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AgntsChatUI.App"
             xmlns:local="using:AgntsChatUI"
             RequestedThemeVariant="Light">

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<FluentTheme />

		<!-- Global light theme overrides -->
		<Style Selector="TextBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#202124"/>
			<Setter Property="BorderBrush" Value="#dadce0"/>
			<Setter Property="SelectionBrush" Value="#4285f4"/>
			<Setter Property="SelectionForegroundBrush" Value="White"/>
		</Style>

		<Style Selector="TextBox:focus">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#202124"/>
			<Setter Property="BorderBrush" Value="#4285f4"/>
			<Setter Property="SelectionBrush" Value="#4285f4"/>
			<Setter Property="SelectionForegroundBrush" Value="White"/>
		</Style>

		<Style Selector="ComboBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#202124"/>
			<Setter Property="BorderBrush" Value="#dadce0"/>
		</Style>

		<Style Selector="ComboBox:focus">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#202124"/>
			<Setter Property="BorderBrush" Value="#4285f4"/>
		</Style>

		<Style Selector="ComboBoxItem">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#202124"/>
		</Style>

		<Style Selector="ComboBoxItem:pointerover">
			<Setter Property="Background" Value="#f8f9fa"/>
			<Setter Property="Foreground" Value="#202124"/>
		</Style>

		<Style Selector="ComboBoxItem:selected">
			<Setter Property="Background" Value="#e8f0fe"/>
			<Setter Property="Foreground" Value="#202124"/>
		</Style>

		<Style Selector="MenuItem">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#202124"/>
		</Style>

		<Style Selector="MenuItem:pointerover">
			<Setter Property="Background" Value="#f8f9fa"/>
			<Setter Property="Foreground" Value="#202124"/>
		</Style>

		<!-- =============================================================================
             REUSABLE BUTTON STYLES
             ============================================================================= -->

		<!-- Primary Blue Button Style -->
		<Style Selector="Button.PrimaryButton">
			<Setter Property="Background" Value="#4285f4"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="Padding" Value="12,8"/>
			<Setter Property="MinWidth" Value="80"/>
		</Style>

		<!-- Secondary Outlined Button Style -->
		<Style Selector="Button.SecondaryButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#5f6368"/>
			<Setter Property="BorderBrush" Value="#dadce0"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CornerRadius" Value="4"/>
			<Setter Property="FontWeight" Value="Medium"/>
			<Setter Property="Padding" Value="16,8"/>
			<Setter Property="MinWidth" Value="80"/>
		</Style>

		<!-- Icon Button Style (Small circular buttons) -->
		<Style Selector="Button.IconButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Width" Value="24"/>
			<Setter Property="Height" Value="24"/>
			<Setter Property="CornerRadius" Value="12"/>
		</Style>

		<!-- Large Icon Button Style (Header buttons) -->
		<Style Selector="Button.LargeIconButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Width" Value="40"/>
			<Setter Property="Height" Value="40"/>
			<Setter Property="CornerRadius" Value="20"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>

		<!-- Send Button Style (Circular send button) -->
		<Style Selector="Button.SendButton">
			<Setter Property="Background" Value="#4285f4"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Width" Value="44"/>
			<Setter Property="Height" Value="44"/>
			<Setter Property="CornerRadius" Value="22"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>

		<!-- Upload Button Style (Special styling for upload) -->
		<Style Selector="Button.UploadButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
		</Style>

		<!-- Transparent Button Style (For transparent overlays) -->
		<Style Selector="Button.TransparentButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
			<Setter Property="VerticalContentAlignment" Value="Stretch"/>
		</Style>

	</Application.Styles>
</Application>